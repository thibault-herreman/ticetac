<!DOCTYPE html>
<html>

<head>
  <meta charset="utf-8">
  <title>
    <%= title %>
  </title>
  <!-- To add in order to scale the view for mobiles -->
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css"
    integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
  <link rel='stylesheet' href='/stylesheets/style.css' />

<script src="https://kit.fontawesome.com/a41e9403cf.js" crossorigin="anonymous"></script>


</head>

<body>
  <%- include('./partials/header'); %>
    <div class="container-fluid">    
      <div class="row justify-content-center">

        <div class="col-8 mt-5">
          <h4 class="titleForm">My tickets :</h4>
        </div>
            
              
        <div class="table-responsive col-8">

          <table id="order-info" class="table table-bordered table-light" width="100%" cellspacing="0">
              <thead>
                  <tr>
                  <th>Journey</th>
                  <th>Date</th>
                  <th>Departure Time</th>
                  <th class="text-center">Price</th>
                  <!-- <th class="text-center">Quantity</th> -->
                  <th class="text-center">Delete</th>
                  </tr>
              </thead>

              <tbody>
                    
                  <% 
                      var total=0;
                      var totalQty=0;
                      for (var i=0;i<tickets.length;i++) {
                        total += tickets[i].price * tickets[i].quantity;
                        totalQty += tickets[i].quantity;
                  %>
                  <tr>
                      <td><%= tickets[i].departure %> / <%= tickets[i].arrival %></td>
                      <td><%= dateFormat(new Date(tickets[i].date)) %></td>     
                      <td><%= tickets[i].departureTime %></td>
                      <td class="text-center"><%= tickets[i].price %>€</td>
                      <td class="text-center"><%= tickets[i].quantity %></td>
                      <td class="text-center"><a href="/journeys/delete?Id=<%= i%>" class="btn btn-outline-info btn-sm" name="button"><i class="far fa-trash-alt"></i></a></td>
                        
                  </tr>
                  <%}%>

                  <tr class="table-danger">
                      <td></td>
                      <td></td>     
                      <td class="text-right">Total</td>
                      <td class="text-center"><%= total %>€</td>
                      <td class="text-center"><%= totalQty %></td>
                      <td></td>
                  </tr>
              </tbody>
          </table>

                  
          <div class="col-12 text-right"> 
              <button type="button" data-toggle="modal" data-target="#modalMyTickets" class="btn btn btn-primary btn-sm btn-checkout">Checkout</button>
              <a href="/home" class="btn btn btn-dark btn-sm btn-checkout">Other ticket</a>
          </div>
        </div>
      </div>    
    </div>
    <%- include('./partials/footer'); %>

    <!-- Modal -->
    <div class="modal fade" id="modalMyTickets" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
      <div class="modal-dialog" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLabel">My tickets</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <div class="modal-body">
            <table id="order-info" class="table table-bordered table-light" width="100%" cellspacing="0">
              <thead>
                  <tr>
                  <th>Journey</th>
                  <th>Date</th>
                  <th>Departure Time</th>
                  <th class="text-center">Price</th>
                  <th class="text-center">Quantity</th>
                  </tr>
              </thead>

              <tbody>
                    
                  <% 
                  var total=0;
                    var totalQty=0;
                    for (var i=0;i<tickets.length;i++) {
                      total += tickets[i].price * tickets[i].quantity;
                      totalQty += tickets[i].quantity;
                  %>
                  <tr>
                      <td><%= tickets[i].departure %> / <%= tickets[i].arrival %></td>
                      <td><%= dateFormat(new Date(tickets[i].date)) %></td>     
                      <td><%= tickets[i].departureTime %></td>
                      <td class="text-center"><%= tickets[i].price %>€</td>
                      <td class="text-center"><%= tickets[i].quantity %></td>
                  </tr>
                  <%}%>

                  <tr class="table-danger">
                      <td></td>
                      <td></td>  
                      <td class="text-right">Total</td>
                      <td class="text-center"><%= total %>€</td>
                      <td class="text-center"><%= totalQty %></td>
                      
                  </tr>
              </tbody>
            </table>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            <a href='/journeys/validate' class="btn btn btn-primary" name="button-checkout">Checkout</a>
          </div>
        </div>
      </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
  </body>
</html>
